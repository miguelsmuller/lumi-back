{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./app",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    // ↓ we set false and pass the responsibility of checking to typescript (default: true)
    "strict": false,
    // ↓ this is necessary for TypeORM to work
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./app/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
