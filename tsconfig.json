{
  "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "rootDir": "./app",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": [
    "./app/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
